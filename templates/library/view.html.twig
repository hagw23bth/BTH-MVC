{% extends 'base.html.twig' %}

{% block title %}All Books{% endblock %}

{% block body %}
<div class="inner-container grid-container">
    <div class="sidebar">
        <ul>
            <li><a href="{{ path('library_home') }}">Library</a></li>
            <li><a href="{{ path('library_create') }}">Add book to library</a></li>
        </ul>
    </div>
    <div class="content">
        <h1>All Books</h1>

        <div class="books-container">
        {% for book in books %}
            <a href="{{ path('library_view_one', {'id': book.id}) }}" class="book-link">
                <div class="book">
                    <img src="{{ asset('img/' ~ book.image) }}" alt="{{ book.title }}">
                    <h3>{{ book.title }}</h3>
                    <p>Author: {{ book.author }}</p>
                    <p>ISBN: {{ book.isbn }}</p>
                </div>
            </a>
        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
